<form action="/robots/<%= @robot.id %>" method="post">
  <h2>Edit Robot</h2>
  <input type="hidden" name="_method" value="PUT" />
  Name<br>
  <input type='text'  class='form-control' name='robot[name]' value="<%= @robot.name %>"/><br/>
  City<br>
  <input type='text'  class='form-control' name='robot[city]' value="<%= @robot.city %>"/><br/>
  State/Planet<br>
  <input type='text'  class='form-control' name='robot[state]' value="<%= @robot.state %>"/><br/>
  Department<br>
  <input type='text'  class='form-control' name='robot[department]' value="<%= @robot.department %>"/><br/>
  <input type='submit'class="btn btn-success"/>
  <a href='/robots'><button type='button' class="btn btn-warning">Cancel</button></a>
</form>
